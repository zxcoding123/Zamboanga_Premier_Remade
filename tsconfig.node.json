{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowJs": true,
    "outDir": "dist",
    "composite": false, // Enable composite for project references
    "noEmit": false, // Allow emission (remove or set to false)
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["vite.config.ts", "src/**/*.node.ts"],
  "exclude": ["node_modules", "dist"]
}